    <ItemGroup>
      <ProjectReference Include="..\Silk.Data\Silk.Data.csproj" />
      <ProjectReference Include="..\Silk.Extensions\Silk.Extensions.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Content Update="appSettings.json">
