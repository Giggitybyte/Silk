@namespace Silk.Dashboard.Components

<div class="container">
    <div class="row d-flex justify-content-center">
        @foreach (var name in Owners.Keys)
        {
            @* TODO: Make sure that 'Name' is unique for '@key' *@
            <OwnerCardView @key="@name" Name="@name" Description="@(Owners[name])" />
        }
    </div>
</div>

@code {

    [Parameter]
    public Dictionary<string, string> Owners { get; set; }

}